<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="org.northwinds.app.sotachaser.ui.map.MapsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="org.northwinds.app.sotachaser.ui.summits.SummitFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_summit" >
        <action
            android:id="@+id/action_navigation_dashboard_to_summitDetailsFragment"
            app:destination="@id/summitDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/summitDetailsFragment"
        android:name="org.northwinds.app.sotachaser.ui.SummitDetailsFragment"
        android:label="SummitDetailsFragment" >
        <argument
            android:name="region"
            app:argType="string" />
        <argument
            android:name="association"
            app:argType="string" />
        <argument
            android:name="summit"
            app:argType="string" />
    </fragment>

    <!--
        <fragment
            android:id="@+id/navigation_notifications"
            android:name="org.northwinds.app.sotachaser.ui.ui.notifications.NotificationsFragment"
            android:label="@string/title_notifications"
            tools:layout="@layout/fragment_notifications" />
    -->
</navigation>
